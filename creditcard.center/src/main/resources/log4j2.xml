<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info">
    <!--先定义所有的appender-->
    <appenders>
        <!--这个输出控制台的配置-->
        <Console name="Console" target="SYSTEM_OUT">
            <!--控制台只输出level及以上级别的信息（onMatch），其他的直接拒绝（onMismatch）-->
            <ThresholdFilter level="debug" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <!--这个都知道是输出日志的格式-->
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %class{36} %M-%msg%xEx%n"/>
        </Console>

        <!-- 1-框架运行中相关的日志配置 -->

        <!-- rpc info级别的 -->
        <RollingFile name="rpc-info" fileName="logs/rpc-info.log"
                     filePattern="logs/rpc-info.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <RollingFile name="rpc-trace-info" fileName="logs/rpc-trace-info.log"
                     filePattern="logs/rpc-trace-info.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- rpc error级别的 -->
        <RollingFile name="rpc-error" fileName="logs/rpc-error.log"
                     filePattern="logs/rpc-error.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="error" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- rpc debug级别的 -->
        <RollingFile name="rpc-debug" fileName="logs/rpc-debug.log"
                     filePattern="logs/rpc-debug.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="debug" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!--  rpc warn级别的 -->
        <RollingFile name="rpc-warn" fileName="logs/rpc-warn.log"
                     filePattern="logs/rpc-warn.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- thrift warn级别的 -->
        <RollingFile name="thrift-warn" fileName="logs/thrift-warn.log"
                     filePattern="logs/thrift-warn.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- thrift error级别的 -->
        <RollingFile name="thrift-error" fileName="logs/thrift-error.log"
                     filePattern="logs/thrift-error.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="error" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- demeter info级别的 -->
        <RollingFile name="anubis-info" fileName="logs/anubis-info.log"
                     filePattern="logs/anubis-info.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <RollingFile name="anubis-warn" fileName="logs/anubis-warn.log"
                     filePattern="logs/anubis-warn.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <RollingFile name="anubis-error" fileName="logs/anubis-error.log"
                     filePattern="logs/anubis-error.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="error" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- creditcard info级别的 -->
        <RollingFile name="creditcard-info" fileName="logs/creditcard-info.log"
                     filePattern="logs/creditcard-info.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="info" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- creditcard warn -->
        <RollingFile name="creditcard-warn" fileName="logs/creditcard-warn.log"
                     filePattern="logs/creditcard-warn.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="warn" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

        <!-- creditcard error -->
        <RollingFile name="creditcard-error" fileName="logs/creditcard-error.log"
                     filePattern="logs/creditcard-error.log.%d{MM-dd-yyyy}">
            <ThresholdFilter level="error" onMatch="ACCEPT"
                             onMismatch="DENY"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd 'at' HH:mm:ss.SSS z} %-5level %c %M-%msg%xEx%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy modulate="false" interval="1"/>
            </Policies>
        </RollingFile>

    </appenders>
    <!--然后定义logger，只有定义了logger并引入的appender，appender才会生效-->
    <loggers>
        <!--建立一个默认的root的logger-->
        <root level="info">
            <appender-ref ref="Console"/>
        </root>

        <!-- 框架运行中涉及到的日志 -->
        <logger name="com.br.rpc" additivity="false">
            <appender-ref ref="rpc-info"/>
            <appender-ref ref="rpc-error"/>
            <appender-ref ref="rpc-debug"/>
            <appender-ref ref="rpc-warn"/>
        </logger>

        <logger name="com.br.anubis" additivity="false">
            <appender-ref ref="anubis-info"/>
            <appender-ref ref="anubis-warn"/>
            <appender-ref ref="anubis-error"/>
        </logger>

        <logger name="com.br.creditcard" additivity="false">
            <appender-ref ref="creditcard-info"/>
            <appender-ref ref="creditcard-error"/>
            <appender-ref ref="creditcard-warn"/>
            <appenderRef ref="Console" />
            <!--这段上正式的时候需要去掉 -->
        </logger>

        <logger name="com.br.rpc.common.log" additivity="false">
            <appender-ref ref="rpc-trace-info"/>
        </logger>

        <logger name="org.apache.thrift" additivity="false">
            <appender-ref ref="thrift-error"/>
            <appender-ref ref="thrift-warn"/>
        </logger>
    </loggers>
</configuration>
